{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "defaultValue": "hubVnet",
            "metadata": {
                "description": "Le Hub"
            }
        },
        "bastion": {
            "type": "string",
            "defaultValue": "AzureBastionSubnet",
            "metadata": {
                "description": "la ressource Bastion"
            }
        },

        "firewall": {
            "type": "string",
            "defaultValue": "AzureFirewallSubnet",
            "metadata": {
                "description": "la ressource firewall"
            }
        },
        "gateway": {
            "type": "string",
            "defaultValue": "GatewaySubnet",
            "metadata": {
                "description": "la ressource Gateway"
            }
        }
        
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[parameters('vnetName')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.16.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "10.16.0.0/26"
                        }
                    },
                    {
                        "name": "AzureFirewallSubnet",
                        "properties": {
                            "addressPrefix": "10.16.0.64/26"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.16.0.128/26"
                        }
                    }
                ]
            }
        }


    ],
    "outputs": {}
}